import java.util.Scanner;


public class Login {
	public static void userlogin()
	{ 
		Scanner userresponse = new Scanner(System.in);
		 String username ;
		    String userid = "abc";
		    int count1 = 0;
		    int count2 = 0;
		do
		{
			if(count1==0)
			{
			System.out.print("type userid ");
			count1++;
			}
			else
				System.out.print("please type valic userid ");
			username = userresponse.next();
	   	}while(!(username.equals(userid)));
		
		 String userpassword; 
		 String userpass = "pass";
		 
		do
		{

			if(count2==0)
			{
			System.out.print("type password ");
			count2++;
			}
			else
				System.out.print("please type valic password ");
	    userpassword = userresponse.next();
	    } while(!(userpassword.equals(userpass)));

		}

}
